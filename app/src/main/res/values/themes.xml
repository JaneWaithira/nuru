<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Nuru" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>


    <style name="Theme.Nuru" parent="Base.Theme.Nuru" />

    <style name="Title">
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">23sp</item>
    </style>

    <style name="CalendarItems">
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:textColor">@color/black</item>
    </style>
    
    <style name="ExpandableListViewTheme">
        <item name="android:background">@drawable/moods_bg_selected</item>
        <item name="drawableEndCompat">@drawable/arrow_down</item>

    </style>

    <style name="TextBoxTitle">
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@color/white</item>
        <item name="background">@drawable/textview_bg</item>
        <item name="hintTextColor">@color/grey</item>
        <item name="android:paddingStart">10dp</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="boxStrokeColor">@color/black</item>
    </style>

    <style name="ButtonYellow">
        <item name="background">@drawable/bg_button</item>
        <item name="backgroundTint">@color/yellow</item>
        <item name="fontFamily">@font/rubik</item>
        <item name="android:textColor">@color/navy</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextInputEditText" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="fontFamily">@font/rubik</item>
    </style>

    <style name="Theme.Nuru.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Nuru.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Nuru.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>