<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPassword"
    tools:ignore="MissingDefaultResource">

    <TextView
        android:id="@+id/forgot_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forgotpassword_title"
        style="@style/Title"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        />
    <ImageView
        android:id="@+id/forgotpassImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/forgot_title"
        android:src="@drawable/forgotpass"/>

    <EditText
        android:id="@+id/recoverpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/forgotpassImage"
        android:fontFamily="@font/rubik"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edit_text_bg"
        android:hint="@string/enter_email"
        android:padding="20dp" />
    
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/recover_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/recover"
        android:layout_below="@id/recoverpass"
        android:layout_margin="10dp"
        style="@style/ButtonYellow"
        android:background="@drawable/bg_button2"
        />

    <TextView
        android:id="@+id/tologin_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/backto_login"
        android:textAlignment="center"
        android:layout_below="@+id/recover_button"
        android:fontFamily="@font/rubik"
        android:textSize="17sp"
        android:layout_marginTop="70dp"

        />



</RelativeLayout>